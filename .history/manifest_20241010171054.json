{
  "manifest_version": 3,
  "name": "ERP Auto Login Extension",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "http://localhost:3000/get-credentials"],
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://erp.iitkgp.ac.in/SSOAdministration/login.htm?sessionToken=92ADED66F3375187539C3CD8D2F4D236.worker1&requestedUrl=https://erp.iitkgp.ac.in/IIT_ERP3/"
      ],
      "js": ["content.js"]
    }
  ],

  "host_permissions": ["http://localhost:3000/*"],

  "web_accessible_resources": [
    {
      "resources": ["form.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
