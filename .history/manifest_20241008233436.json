{
    "manifest_version": 3,
    "name": "ERP Auto Login Extension",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://erp.iitkgp.ac.in/SSOAdministration/login.htm"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    
    "web_accessible_resources": [
    {
      "resources": ["erp_page.html"],
      "matches": ["<all_urls>"]
    }
  ]
}